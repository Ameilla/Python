x=int(input("Enter the number to be printed: "))
n=int(input("Max Number of time printed: "))

for i in range(1,n+1):
    for j in range(1,i+1):
        print(x,end=" ")
    print()

for i in range(n,0,-1):
    for j in range(1,i):
        print(x,end=" ")
    print()
    
    
    
    
    
    
#Output:

1 
1 1 
1 1 1 
1 1 
1 
