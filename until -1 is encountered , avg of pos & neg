print("Enter -1 to exit...")
a=[]
b=[]
while True:
    n=int(input("Enter the number: "))
    if(n==-1):
        break
    if(n>0):
        a.append(n)
    else:
        b.append(n)

apos=(sum(a)/len(a))
bneg=(sum(b)/len(b))
print("The average of negative numbers is: ",bneg)
print("The average of positive numbers is: ",apos)
